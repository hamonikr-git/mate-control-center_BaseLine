M	src/gth-browser-ui.h
M	src/gth-browser.c
M	src/gth-viewer-ui.h
M	src/gth-window-actions-callbacks.c
M	src/gth-window-actions-callbacks.h
M	src/gth-window-actions-entries.h

commit b2b976012f8b3722591a25cf97df8e7cde41ed55
